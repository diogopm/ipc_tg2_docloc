<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView_marker"
        android:layout_marginTop="1dp"
        android:layout_width="48dp"
        android:layout_height="64dp"
        android:background="@drawable/map_marker"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView_marker_avatar"
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="3dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        />
  <!--
    <ImageView
        android:id="@+id/imageView_marker_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_face_black"/>
        -->

    <ImageView
        android:id="@+id/imageView_marker_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView_marker"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imageView_marker"
        android:background="@android:drawable/presence_online"/>

</RelativeLayout>