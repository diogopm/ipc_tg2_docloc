<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="?attr/actionBarItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView_info_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_face_black"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView_info_avatar"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView_info_avatar"
        android:layout_toRightOf="@+id/imageView_info_avatar"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/textView_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_info_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_info_name"
                android:background="@android:drawable/presence_online"/>

            <TextView
                android:id="@+id/textView_info_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView_info_status"
                android:layout_below="@+id/textView_info_name"
                android:layout_toEndOf="@+id/imageView_info_status"
                android:layout_toRightOf="@+id/imageView_info_status"
                android:text="Small Text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                />


        </LinearLayout>

        <TextView
            android:id="@+id/textView_info_room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView_info_status"
            android:layout_below="@+id/textView_info_name"
            android:layout_toEndOf="@+id/imageView_info_status"
            android:layout_toRightOf="@+id/imageView_info_status"
            android:gravity="right"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

    </LinearLayout>

</LinearLayout>